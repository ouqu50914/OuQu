.wrap {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    background: url(https://demo.17weiju.com/codm/a20200316misssta/img/taskbg.jpg) no-repeat center/cover;
    width: 100%;
    min-height: 100vh;
    padding-top: 35rpx;
    box-sizing: border-box;
}
.title {
    font-family: BigruixianBlackGBV1.0;
    font-size: 28rpx;
    color: #ffe93d;
    width: 100%;
    padding-left: 70rpx;
    margin: 50rpx auto 15rpx;
}

.subtitle {
    font-size: 18rpx;
    color: #f1f1f1;
    width: 100%;
    padding-left: 140rpx;
}

.taskbox {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 50rpx;
}

.list {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    margin-bottom: 35rpx;
}

.list .number {
    background: url(https://demo.17weiju.com/codm/a20200316misssta/img/sprite.png) no-repeat -350rpx -60rpx/750rpx 750rpx;
    width: 96rpx;
    height: 105rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    font-size: 30rpx;
    font-style: italic;
    letter-spacing: 2rpx;
    color: #ffe93d;
    padding-bottom: 15rpx;
    position: absolute;
    left: -10rpx;
    top: -20rpx;
}

.bg {
    background: url(https://demo.17weiju.com/codm/a20200316misssta/img/sprite.png) no-repeat 0 -170rpx/750rpx 750rpx;
    width: 555rpx;
    height: 64rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    font-size: 20rpx;
    color: #fff;
    box-sizing: border-box;
    padding-left: 90rpx;
}
.bg .taskname {
    flex: 7;
}

.bg .taskgift {
    flex: 3;
    position: relative;
    font-family: BigruixianBlackGBV1.0;
}
.bg .taskgift:before {
    background: url(https://demo.17weiju.com/codm/a20200316misssta/img/sprite.png) no-repeat -260rpx -100rpx/750rpx 750rpx;
    width: 30rpx;
    height: 33rpx;
    content: '';
    position: absolute;
    left: -60rpx;
    top: 0;
}
.taskbox:nth-of-type(2) .bg .taskgift:before{
    background-position: -220rpx -100rpx;
}
.btn {
    background: url(https://demo.17weiju.com/codm/a20200316misssta/img/sprite.png) no-repeat -460rpx -70rpx/750rpx 750rpx;
    width: 141rpx;
    height: 66rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: BigruixianBlackGBV1.0;
    font-size: 24rpx;
    color: #3d270b;
}
